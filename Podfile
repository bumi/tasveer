target 'Tasveer' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Tasveer
  # Alamofire for networking
  pod 'Alamofire'

  # Fabrics Crashlytics for crash reports
  pod 'Fabric'
  pod 'Crashlytics'

  # Material components
  pod 'MaterialComponents'
  
  # Progress HUD
  pod 'MBProgressHUD'

  # Nuke for fetching asynchronously images
  pod 'Nuke'

  # ReachabilitySwift for observing network connection status
  pod 'ReachabilitySwift'

  # SwiftyJSON for parsing json
  pod 'SwiftyJSON'

end
